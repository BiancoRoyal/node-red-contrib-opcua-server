{
  "name": "node-red-contrib-opcua-server",
  "version": "0.4.1",
  "description": "Node-RED contribution nodes with next generation OPC UA in a compact and less dependencies package.",
  "author": "Bianco Royal <developers@bianco-royal.de>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BiancoRoyal/node-red-contrib-opcua-server.git"
  },
  "license": "MIT",
  "homepage": "https://github.com/BiancoRoyal/node-red-contrib-opcua-server#readme",
  "bugs": {
    "url": "https://github.com/BiancoRoyal/node-red-contrib-opcua-server/issues"
  },
  "main": "index.js",
  "files": [
    "docs",
    "examples",
    "opcuaCompact",
    "create_certificates.js"
  ],
  "dependencies": {
    "better-assert": "1.0.2",
    "debug": "4.1.1",
    "node-opcua": "0.7.0",
    "source-map-support": "0.5.10",
    "vm2": "3.9.6"
  },
  "scripts": {
    "postinstall": "node ./create_certificates.js demo --dev -s -r ./certificates",
    "test": "jest",
    "test:clearCache": "jest --clearCache",
    "test:coverage": "jest --coverage",
    "check:formatter": "prettier --check \"src/**/*.js\" && prettier --check \"test/**/*.js\"",
    "coverage:ci": "npm run check:formatter && jest --coverage --verbose --detectOpenHandles --forceExit --logHeapUsage --ci --debug",
    "coverage:upload": "cat ./jcoverage/lcov.info | codacy-coverage --token 1aa4f8d6feaf4e4e8ffb7f27a12b1116",
    "release": "npm run clean:formatter && standard-version",
    "release:alpha": "npm run clean:formatter && npm run release -- --prerelease alpha",
    "inspect": "jsinspect ./src > .jsinspect-results.json",
    "rewrite-changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "clean:install": "./clean.sh",
    "clean:formatter": "prettier --write \"src/**/*.js\" && prettier --write \"test/**/*.js\"",
    "lint:md": "remark ."
  },
  "engines": {
    "node": ">=10"
  },
  "node-red": {
    "nodes": {
      "Compact-Server": "opcuaCompact/server-node.js"
    }
  },
  "keywords": [
    "node-red",
    "node-opcua",
    "opcua",
    "automation",
    "fieldbus",
    "iiot",
    "biancoroyal",
    "modbus"
  ],
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.3",
    "@babel/preset-env": "^7.3.1",
    "ci-publish": "^1.3.1",
    "codacy-coverage": "^3.4.0",
    "conventional-changelog-cli": "^2.0.12",
    "gulp": "^4.0.0",
    "gulp-babel": "^8.0.0",
    "gulp-clean": "^0.4.0",
    "gulp-htmlmin": "^5.0.1",
    "gulp-jsdoc3": "^2.0.0",
    "gulp-replace": "^1.0.0",
    "gulp-sequence": "^1.0.0",
    "gulp-sourcemaps": "^2.6.5",
    "gulp-uglify": "^3.0.1",
    "jest": "^24.3.1",
    "jsdoc": "^3.5.5",
    "node-red": "^0.20.8",
    "node-red-node-test-helper": "^0.1.8",
    "prettier": "^1.16.4",
    "pump": "^3.0.0",
    "remark-cli": "^6.0.1",
    "remark-lint": "^6.0.4",
    "remark-preset-lint-recommended": "^3.0.2",
    "standard-version": "^5.0.0",
    "tslib": "^1.9.3",
    "uglify-js": "^3.4.9",
    "uglify-js-harmony": "^2.7.7",
    "weak": "^1.0.1",
    "when": "^3.7.8"
  },
  "standard": {
    "env": [
      "jest"
    ],
    "ignore": [
      "code/",
      "node_modules/",
      "examples/",
      "opcua/",
      "docs",
      "src/public/",
      "test"
    ]
  },
  "remarkConfig": {
    "plugins": [
      "remark-preset-lint-recommended",
      [
        "remark-lint-list-item-indent",
        false
      ]
    ]
  },
  "browserslist": "> 0.25%, not dead",
  "jest": {
    "verbose": true
  }
}
