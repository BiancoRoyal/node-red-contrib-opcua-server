{
  "name": "node-red-contrib-opcua-server",
  "version": "0.1.0",
  "description": "Node-RED contribution nodes with next generation OPC UA in a compact and less dependencies package.",
  "author": "Bianco Royal <developers@bianco-royal.de>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BiancoRoyal/node-red-contrib-opcua-server.git"
  },
  "license": "MIT",
  "homepage": "https://github.com/BiancoRoyal/node-red-contrib-opcua-server#readme",
  "bugs": {
    "url": "https://github.com/BiancoRoyal/node-red-contrib-opcua-server/issues"
  },
  "main": "index.js",
  "files": [
    "docs",
    "examples",
    "opcuaCompact"
  ],
  "dependencies": {
    "better-assert": "1.0.2",
    "debug": "4.1.1",
    "node-opcua": "2.0.0-alpha.13",
    "node-opcua-pki": "1.0.3",
    "node-opcua-isa95": "0.0.5",
    "vm2": "3.6.10"
  },
  "scripts": {
    "postinstall": "gulp publish && node ./opcuaCompact/create_certificates.js demo --dev -s -r ./certificates",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "release": "standard-version -a",
    "inspect": "jsinspect ./src > .jsinspect-results.json"
  },
  "engines": {
    "node": ">=10"
  },
  "node-red": {
    "nodes": {
      "Compact-Server": "opcuaCompact/server-node.js"
    }
  },
  "keywords": [
    "node-red",
    "node-opcua",
    "opcua",
    "automation",
    "fieldbus",
    "iiot",
    "biancoroyal",
    "modbus"
  ],
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.3",
    "@babel/preset-env": "^7.3.1",
    "ci-publish": "^1.3.1",
    "codacy-coverage": "^3.4.0",
    "conventional-changelog-cli": "^2.0.12",
    "gulp": "^4.0.0",
    "gulp-babel": "^8.0.0",
    "gulp-clean": "^0.4.0",
    "gulp-htmlmin": "^5.0.1",
    "gulp-jsdoc3": "^2.0.0",
    "gulp-replace": "^1.0.0",
    "gulp-sequence": "^1.0.0",
    "gulp-sourcemaps": "^2.6.5",
    "gulp-uglify": "^3.0.1",
    "jest": "^24.1.0",
    "jsdoc": "^3.5.5",
    "node-red": "^0.19.6",
    "node-red-node-test-helper": "^0.1.8",
    "pump": "^3.0.0",
    "prettier": "^1.16.4",
    "standard-version": "^5.0.0",
    "tslib": "^1.9.3",
    "uglify-js": "^3.4.9",
    "uglify-js-harmony": "^2.7.7",
    "weak": "^1.0.1",
    "when": "^3.7.8"
  },
  "standard": {
    "env": [
      "jest"
    ],
    "ignore": [
      "code/",
      "node_modules/",
      "examples/",
      "opcua/",
      "docs",
      "src/public/",
      "test"
    ]
  },
  "browserslist": "> 0.25%, not dead",
  "jest": {
    "verbose": true
  }
}
